{% extends 'base.html.twig' %}

{% block title %}Garage{% endblock %}

{% block body %}

<main>
  <div class="container d-flex flex-column">
    <h2 id="h2-voiture">Les voitures disponibles!</h2>
    <p>Filter</p>
    <form id="filters">
      <p><label for="send">prix</label><input type="range" min="1" max="100000" name="prix" id="send" oninput="result.value=send.value"> <input type="submit"><input type="text" id="result"></p>
      <p><input type="checkbox" name="filtre" id="" value=""> <label for="">Année</label></p>
      <p><input type="checkbox" name="filtre" id="" value=""> <label for="">kilométrage</label></p>

    </form>
          
    <section class="container d-flex flex-row" >
      {% if voiture.EstVendu %}
      <div>Aucune voiture pour le moment.</div>
      {% else %}
      {% for voiture in voitures %}
      <div class="item d-flex flex-column" id="boucle-voiture">
        <img src="{{ asset('img/' ~ voiture.ImagePrincipale) }}" id="img-voiture" alt="{{voiture.Titre}}">
        <div class="card-body">
          <h class="title">{{voiture.Titre}}</h5>
          <p id="prix-voiture">{{voiture.Prix}} €<p>
          <p>{{voiture.Km}} km</p>
          <a href="{{path('voiture', {'id':voiture.id})}}" class="btn btn-primary">Détails</a>
        </div>
      </div>
          {% endfor %}
          {% endif %}

        </section>

    
  </div>
</main>


{% endblock %}
